{
    "name": "rafflesargentina/l8-restful-controller",
    "description": "RESTful Controller for Laravel 8",
    "keywords": [
        "restful controller", "laravel 8"
    ],
    "homepage": "https://github.com/rafflesargentina/l8-restful-controller",
    "license": "MIT",
    "authors": [
        {
            "name": "Mario Patronelli",
            "email": "mario@raffles.com.ar",
            "homepage": "http://raffles.com.ar",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=7.3",
        "laravel/framework": "8.*"
    },
    "require-dev": {
        "orchestra/testbench": "^3.7",
        "caffeinated/repository": "^3.4",
        "orchestra/database": "^3.6",
        "squizlabs/php_codesniffer": "3.*",
        "phpunit/phpunit": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "RafflesArgentina\\ResourceController\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RafflesArgentina\\ResourceController\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
